{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "api/hello.py", "use": "@vercel/python" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "includeFiles": ["backend/**"]
    },
    "api/hello.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    { "src": "/api/hello", "dest": "api/hello.py" },
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/", "dest": "frontend/index.html" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}