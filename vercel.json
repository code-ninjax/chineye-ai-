{
  "version": 2,
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "includeFiles": "backend/**"
    },
    "api/hello.py": {
      "runtime": "python3.11"
    }
  },
  "rewrites": [
    { "source": "/api/hello", "destination": "/api/hello" },
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/", "destination": "/frontend/index.html" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ]
}